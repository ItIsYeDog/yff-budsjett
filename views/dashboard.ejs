// Data for budsjettfremgang-grafen
const budgetLimitsData = <%- JSON.stringify(budgetLimits || []) %>;
const categoryLabelsData = <%- JSON.stringify(categoryLabels || []) %>;
const categoryAmountsData = <%- JSON.stringify(categoryAmounts || []) %>;

const budgetProgressChartLabels = [];
const budgetProgressChartSpents = []; // Faktisk brukt beløp
const budgetProgressChartLimits = []; // Budsjettgrense
const budgetProgressBackgroundColors = [];
const budgetProgressBorderColors = [];

let hasBudgetData = false;
budgetLimitsData.forEach(budget => {
    if (budget.limit > 0) {
        hasBudgetData = true;
        const categoryName = budget.category;
        const limit = budget.limit;
        let spentAmount = 0;

        const categoryIndex = categoryLabelsData.indexOf(categoryName);
        if (categoryIndex !== -1) {
            spentAmount = categoryAmountsData[categoryIndex];
        }

        budgetProgressChartLabels.push(categoryName.charAt(0).toUpperCase() + categoryName.slice(1));
        budgetProgressChartSpents.push(spentAmount);
        budgetProgressChartLimits.push(limit);

        const percentageSpent = (spentAmount / limit) * 100;

        if (percentageSpent > 100) {
            budgetProgressBackgroundColors.push('rgba(239, 68, 68, 0.6)'); // Rød (over budsjett)
            budgetProgressBorderColors.push('rgba(220, 38, 38, 1)');
        } else if (percentageSpent > 80) {
            budgetProgressBackgroundColors.push('rgba(245, 158, 11, 0.6)'); // Oransje (nær budsjett)
            budgetProgressBorderColors.push('rgba(217, 119, 6, 1)');
        } else {
            budgetProgressBackgroundColors.push('rgba(16, 185, 129, 0.6)'); // Grønn (innenfor budsjett)
            budgetProgressBorderColors.push('rgba(5, 150, 105, 1)');
        }
    }
});

const budgetProgressCtx = document.getElementById('budgetProgressChart').getContext('2d');
if (hasBudgetData) {
    new Chart(budgetProgressCtx, {
        type: 'bar',
        data: {
            labels: budgetProgressChartLabels,
            datasets: [
                {
                    label: 'Brukt beløp',
                    data: budgetProgressChartSpents,
                    backgroundColor: budgetProgressBackgroundColors,
                    borderColor: budgetProgressBorderColors,
                    borderWidth: 1
                },
                {
                    label: 'Budsjettgrense',
                    data: budgetProgressChartLimits,
                    type: 'line', // Vis grensen som en linje eller annen type bar
                    borderColor: 'rgba(107, 114, 128, 0.5)', // Grå
                    backgroundColor: 'rgba(107, 114, 128, 0.1)',
                    borderWidth: 2,
                    pointRadius: 0, // Skjul punkter på linjen hvis ønskelig
                    fill: false,
                     // For å unngå at linjen påvirker stablingen hvis du bruker stablede søyler
                    order: 0 // Sørg for at linjen tegnes oppå søylene
                }
            ]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            indexAxis: 'y', // Horisontale søyler gjør det ofte lettere å lese kategorinavn
            scales: {
                x: {
                    beginAtZero: true,
                    ticks: {
                        callback: function(value) {
                            return 'kr ' + value.toLocaleString('no-NO');
                        }
                    }
                },
                y: {
                    ticks: {
                        autoSkip: false // Vis alle kategorietiketter
                    }
                }
            },
            plugins: {
                tooltip: {
                    callbacks: {
                        label: function(context) {
                            let label = context.dataset.label || '';
                            if (label) {
                                label += ': ';
                            }
                            if (context.parsed.x !== null) {
                                label += 'kr ' + context.parsed.x.toLocaleString('no-NO');
                            }
                            // Legg til prosentandel brukt
                            if (context.dataset.label === 'Brukt beløp') {
                                const spent = context.parsed.x;
                                const limit = budgetProgressChartLimits[context.dataIndex];
                                if (limit > 0) {
                                    const percentage = ((spent / limit) * 100).toFixed(1);
                                    label += ` (${percentage}%)`;
                                }
                            }
                            return label;
                        }
                    }
                },
                legend: {
                    position: 'top',
                }
            }
        }
    });
} else {
    // Vis en melding hvis ingen budsjettdata er tilgjengelig
    const canvasContainer = budgetProgressCtx.canvas.parentNode;
    canvasContainer.innerHTML = '<p class="text-center text-gray-500 py-8">Ingen budsjettgrenser er satt. Du kan sette dem under <a href="/settings" class="text-blue-600 hover:underline">Innstillinger</a>.</p>';
}
</script>

