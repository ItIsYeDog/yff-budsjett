// Category Details Modal functions
async function openCategoryDetailsModal() {
    const modal = document.getElementById('categoryDetailsModal');
    const tableBody = document.getElementById('categoryDetailsTableBody');
    
    tableBody.innerHTML = '<tr><td colspan="4" class="text-center py-4 px-6">Laster detaljer...</td></tr>';
    modal.classList.remove('hidden');
    document.body.style.overflow = 'hidden';

    try {
        const response = await fetch('/transactions/category-chart-details'); 
        if (!response.ok) {
            const errorData = await response.json();
            throw new Error(errorData.message || 'Kunne ikke hente transaksjonsdetaljer.');
        }
        const transactions = await response.json();

        if (transactions.length === 0) {
            tableBody.innerHTML = '<tr><td colspan="4" class="text-center py-4 px-6">Ingen utgiftstransaksjoner funnet for perioden som vises i diagrammet.</td></tr>';
            return;
        }

        let rowsHtml = '';
        transactions.forEach(transaction => {
            rowsHtml += `
                <tr class="hover:bg-gray-50">
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">${new Date(transaction.date).toLocaleDateString('no-NO')}</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">${transaction.category}</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 max-w-xs truncate" title="${transaction.description || ''}">${transaction.description || '-'}</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-red-600 text-right">kr ${transaction.amount.toLocaleString('no-NO', { minimumFractionDigits: 2, maximumFractionDigits: 2 })}</td>
                </tr>
            `;
        });
        tableBody.innerHTML = rowsHtml;

    } catch (error) {
        console.error("Error fetching category details:", error);
        tableBody.innerHTML = `<tr><td colspan="4" class="text-center py-4 px-6 text-red-600">Feil: ${error.message}</td></tr>`;
    }
}

function closeCategoryDetailsModal() {
    document.getElementById('categoryDetailsModal').classList.add('hidden');
    if (!document.getElementById('transactionModal').classList.contains('hidden')) {
        // Hvis transaksjonsmodalen fortsatt er åpen, ikke endre body overflow
    } else {
        document.body.style.overflow = 'auto';
    }
}

// Event listener for "Se detaljer" knappen
document.getElementById('openCategoryDetailsBtn').addEventListener('click', openCategoryDetailsModal);

// Lukk category details modal hvis man klikker utenfor
document.getElementById('categoryDetailsModal').addEventListener('click', function(e) {
